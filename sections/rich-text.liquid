{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}
<style>
  .color-{{ section.settings.color_scheme }} .dot,
  .color-{{ section.settings.color_scheme }} .dot-l {
  background-color: currentColor;
  }
  .rich_text_button{
    border: 0.1rem solid rgba(var(--color-button), 1);
   background: rgb(var(--color-button-text)) ;
  color: rgb(var(--color-secondary-button-text));
  }
   .richtext_heading {
    font-family: var(--font-heading-family);
    font-style: var(--font-heading-style);
    font-size: calc(var(--font-heading-scale) * {{ section.settings.heading_font_size }}px);
    font-weight:700;
    color: rgb(var(--color-foreground));
  }
  .richtext_subheading {
    color: rgb(var(--color-foreground));
  }
    .section-{{ section.id }}-padding.layout1,
    .section-{{ section.id }}-padding.layout2 {
      padding-top: {{section.settings.padding_top}}px;
      padding-bottom: {{section.settings.padding_bottom}}px;
    }
</style>

<div  class="rich-text-section color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding {% if section.settings.layout_style == 'layout1' %}layout1{% else %}layout2{% endif %}">
  {% if section.settings.layout_style == 'layout1' %}
    <div class="page-width1">
    {%- for block in section.blocks -%}
        {% case block.type %}
              {%- when 'heading' -%}
      <h2 class="richtext_heading">
            {{ block.settings.heading }}
      </h2>
      <div class="decorative-dots">
        {% for i in (1..section.settings.dots_number1) %}
          <span class="dot"></span>
        {% endfor %}
      </div>
      {%- when 'subheading' -%}
      <p class="richtext_subheading">
            {{ block.settings.caption }}
      </p>
         {%- when 'text' -%}
       {{ block.settings.text }}
        {%- when 'button' -%}
            {% if block.settings.show_button %}
            <a href="{{ block.settings.button_link }}" class="rich_text_btn">
              {{ block.settings.button_text }}
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="rich-text-svg"
              >
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </a>
             {%-  endif -%}
          {%- endcase -%}
     {%- endfor -%}
    </div>
   {% else %}   
    <div class="dots-container">
      <div class="side-dots left">
        {% for i in (1..section.settings.dots_number2) %}
          <span class="dot-l"></span>
        {% endfor %}
      </div>
      <div class="rich-text__blocks {{ section.settings.content_alignment }}">
    {%- for block in section.blocks -%}
         {% case block.type %}
              {%- when 'heading' -%}
     
        <h2 class="richtext_heading">
              {{ block.settings.heading }}
        </h2>
          {%- when 'subheading' -%}
        <p class="richtext_subheading">
              {{ block.settings.caption }}
        </p>
          {%- when 'text' -%}
           {{ block.settings.text }}
         {%- when 'button' -%}
       
          {% if block.settings.show_button %}
            <a href="{{ block.settings.button_link }}" class="rich_text_btn">
              {{ block.settings.button_text }}
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="rich-text-svg"
              >
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </a>
            {%-  endif -%}
          {%- endcase -%}
      {%- endfor -%}
      </div>
      <div class="side-dots right">
        {% for i in (1..section.settings.dots_number2) %}
          <span class="dot-l"></span>
        {% endfor %}
      </div>
    </div>
  {% endif %}
</div>



{% schema %}
{
  "name": "Rich Text",
"disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [

    {
      "type": "select",
      "id": "layout_style",
      "label": "Choose Layout",
      "options": [
        {
          "value": "layout1",
          "label": "Layout 1"
        },
        {
          "value": "layout2",
          "label": "Layout 2"
        }
      ],
      "default": "layout1"
    },
     {
      "type": "range",
      "id": "dots_number1",
      "min": 1,
      "max": 12,
      "step": 1,
      "label": "Number of dots layout1",
      "default": 10
    },
      {
      "type": "range",
      "id": "dots_number2",
      "min": 10,
      "max": 24,
      "step": 1,
      "label": "Number of dots layout2",
      "default": 10
    },
     {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "min": 16,
      "max": 60,
      "step": 1,
      "unit": "px",
      "label": "Heading Font Size",
      "default": 22
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    }
  ],
  "blocks": [
  {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Talk about your brand"
        }
      ]
    },
   {
      "type": "subheading",
      "name": "Sub Heading",
       "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "caption",
          "label": "Caption",
          "default": "Add additional Subheading"
        }
      ]
    },

 {
    "type": "text",
    "name": "Text",
     "limit": 1,
    "settings": [
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
    },
    ]
},
{
      "type": "button",
      "name": "Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "checkbox",
          "id": "show_button",
          "label": "Show Button",
          "default": false
        }
      ]
    }

],
 "presets": [
  {
    "name": "Rich Text",

    "blocks": [
      {
        "type": "heading",
      },
      {
        "type": "subheading",
      },
      {
        "type": "text",
      },
      {
        "type": "button",
      }
    ]
  }
]
}
{% endschema %}
