{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .card__inner{
    height: 50%;
  }
  .article-card__excerpt{
    margin: 5px 0 !important;
  }
  .card__content{
    height: 50%;
    font-size: 13px !important;
  }
  {% if section.settings.show_excerpt == false %}
  .card__information{
    height: auto !important;
    min-height: 80px !important;
  }
  .card__content{
    height: auto !important;
  }
  {% else %}
  .card__information{
    height: 300px !important;
  }
  {% endif %}
  
   @media screen and (max-width: 1250px){
      .article-card, .card__heading, .h2{
      font-size: 16px !important;
    }
     .h2{
       font-weight: bold !important;
     }
   }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .card{
     background: rgb(var(--color-button)) !important;
    border-radius:4px !important;
  }
  .main-blog-test{
     background: rgb(var(--color-button)) !important;
  }
  .page-width {
    max-width: none;
  }
  .test2{
    height: 345px;
  }
  .card__content{
        font-size: 12px;
    padding: 10px !important;
  }
  .blog-articles__article{
    overflow: hidden;
      position: relative;
  }


.article-tags {
  position: absolute;
  top: 10px;
  left: 10px;
  display: flex;
  gap: 5px;
  flex-wrap: wrap;
  z-index: 10; 
}
  .article-tags .tag {
    background-color: rgb(var(--color-background));
    color: var(--color-foreground);
    text-decoration: none;
    padding: 5px 10px;
    border-radius: 4px;
    font-size: 12px;
  }
  .article-tags .tag:hover {
    text-decoration: underline;
  }

  .blog-articles {
    display: grid;
    grid-template-columns: repeat({{ section.settings.articles_per_row }}, 1fr);
    gap: 20px;
  }

  @media screen and (max-width: 750px) {
    .blog-articles {
      grid-template-columns: 1fr;
    }
  }

{%- endstyle -%}

{%- paginate blog.articles by 12 -%}
  <div class="main-blog color-{{ section.settings.color_scheme }} page-width section-{{ section.id }}-padding">
    <h1 class=" title--primary{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {{ blog.title | escape }}
    </h1>

    <div class="blog-articles {% if section.settings.layout == 'collage' %}blog-articles--collage{% endif %}">
      {%- for article in blog.articles -%}
        <div
          class="blog-articles__article main-blog-test  article{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} "
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: {{ forloop.index }};"
          {% endif %}
        >
           {%- if section.settings.show_tags and article.tags.size > 0 -%}
            <div class="article-tags">
              {%- for tag in article.tags -%}
                <a href="{{ routes.blog_tag_url | append: tag }}" class="tag">{{ tag }}</a>
              {%- endfor -%}
            </div>
          {%- endif -%}
          <div class="semi semi-left"><h6></h6></div>
          <div class="semi semi-right"><h6></h6></div>
        
          {%- render 'article-card',
            article: article,
            show_image: true, 
            show_date: section.settings.show_date,
            show_author: section.settings.show_author,
            show_excerpt: section.settings.show_excerpt,
          -%}
        </div>
      {%- endfor -%}
    </div>

    {%- if paginate.pages > 1 -%}
      {%- render 'pagination', paginate: paginate -%}
    {%- endif -%}
  </div>
{%- endpaginate -%}


{% schema %}
{
  "name": "t:sections.main-blog.name",
  "tag": "section",
  "class": "section",
  "settings": [
        {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.main-blog.settings.header.content"
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "default": true,
      "label": "t:sections.main-blog.settings.show_date.label"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "default": false,
      "label": "t:sections.main-blog.settings.show_author.label"
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "default": true,
      "label": "Show excerpt"
    },
    {
      "type": "checkbox",
      "id": "show_tags",
      "default": false,
      "label": "Show tags"
    },
    {
      "type": "select",
      "id": "articles_per_row",
      "label": "Articles per row",
      "info": "Number of articles to be displayed in desktop view",
      "options": [
        { "value": "3", "label": "3 Articles" },
        { "value": "4", "label": "4 Articles" }
      ],
      "default": "3"
    },
    {
      "type": "paragraph",
      "content": "t:sections.main-blog.settings.paragraph.content"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
