<style type="text/css">
  .template-404 .title + * {
    margin-top: 1rem;
  }

  @media screen and (min-width: 750px) {
    .template-404 .title + * {
      margin-top: 2rem;
    }
  }

  @media screen and (min-width: 749px) {
    .bb-upper-template-404 {
      width: {{ section.settings.card_width }}rem;
    }
  }
  @media screen and (max-width: 749px) {
    .bb-upper-template-404 {
      width: {{ section.settings.card_width_mobile }}rem;
    }
  }

</style>

{{ 'main-404.css' | asset_url | stylesheet_tag }}
<div class="bb-404-uper-banner color-{{ section.settings.color_scheme }}">
<div class="desktop-view bb-upper-template-404">
  <!--
  <div class="vertical-bar-top-404">
    {% for i in (0..16) %}
      <div class="vertical-bar-circle-h-404 index-404-{{i}}"></div>
    {% endfor %}
  </div>
  <div class="vertical-bar-left-404">
  {% for i in (0..7) %}
    <div class="vertical-bar-circle-404 index-404-{{i}}"></div>
  {% endfor %}
  </div>
  -->
<div class="bb-template-404 template-404 page-width page-margin center">
  <img
  src="{{ '404-error.png' |  asset_url }}"
  loading="lazy"
  decoding="async"
  width="auto"
  height="auto">
  <!--
  <h1 class="bb-404-subtext">
    {{ 'templates.404.subtext' | t }}
  </h1>
  -->
  <h1 class="bb-404-title title">
    {{ section.settings.heading }}
  </h1>
  
  <h2 class="bb-404-sub-title title">
    {{ section.settings.sub_heading }}
  </h2>
  <p class="bb-404-para">
    {{ section.settings.description }}
  </p>
  {% if section.settings.button1 != blank %}
    <a href="{{ section.settings.link1 }}" class="bb-404-h-button button">
      {{ section.settings.button1 }}
    </a>
  {% endif %}
  {% if section.settings.button2 != blank %}
    <a href="{{ section.settings.link2 }}" class="bb-404-h2-button button">
      {{ section.settings.button2 }}
    </a>
  {% endif %}
</div>
