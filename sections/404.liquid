{% schema %}
  {
    "name": "404",
    "settings": [
      {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.email-signup-banner.settings.color_scheme.info",
      "default": "scheme-1"
    },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Oops! Page Not Found"
      },
      {
        "type": "text",
        "id": "sub_heading",
        "label": "Sub Heading",
        "default": "Looks like you've hit a dead end."
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "The page you’re looking for doesn’t exist or may have been moved.  But don’t worry, you’re still in the game! Let’s get you back on track."
      },
      {
        "type": "text",
        "id": "button1",
        "label": "Button Text",
        "default": "Go to Home"
      },
      {
        "type": "url",
        "id": "link1",
        "label": "Link to Button"
      },
      {
        "type": "text",
        "id": "button2",
        "label": "Second Button Text",
        "default": "Contact Support"
      },
      {
        "type": "url",
        "id": "link2",
        "label": "Link to Second Button"
      },
      {
      "type": "range",
      "id": "card_width",
      "label": "Card Size (Desktop View)",
      "min": 60,
      "max": 120,
      "step": 1,
      "default": 120
    },
    {
      "type": "range",
      "id": "card_width_mobile",
      "label": "Card Size (Mobile View)",
      "min": 20,
      "max": 35,
      "step": 1,
      "default": 35
    }
    ]
  }
{% endschema %}
