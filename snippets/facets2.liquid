                        <price-range class="facets__price">
                          {% render 'price-facet', filter: filter, id_prefix: 'Filter-mobile-', filter_type: filter_type, mobile: true %}
                        </price-range>
                      </div>
                      </details>
                  {% endcase %}
                {%- endfor -%}
              {%- endif -%}
